{
  "name": "vscode-gogocode",
  "displayName": "GoGoCode Refactor",
  "description": "use code to refactor your code easily",
  "icon": "icon.png",
  "version": "0.4.6",
  "engines": {
    "vscode": "^1.55.0"
  },
  "publisher": "mmfe",
  "repository": {
    "type": "git",
    "url": "https://github.com/thx/vscode-gogocode.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gogocode.open",
    "onCommand:gogocode.transformFile",
    "onCommand:gogocode.transformFolder",
    "onCommand:gogocode.vueUp",
    "onWebviewPanel:gogocode"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gogocode.open",
        "title": "Open GoGoCode"
      },
      {
        "command": "gogocode.transformFile",
        "title": "用 GoGoCode 转换"
      },
      {
        "command": "gogocode.transformFolder",
        "title": "用 GoGoCode 转换"
      },
      {
        "command": "gogocode.vueUp",
        "title": "vue2升级为vue3"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "!explorerResourceIsFolder",
          "command": "gogocode.transformFile",
          "group": "2_workspace"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "gogocode.transformFolder",
          "group": "2_workspace"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "gogocode.vueUp",
          "group": "2_workspace"
        }
      ],
      "editor/context": [
        {
          "when": "isFileSystemResource && editorFocus",
          "command": "gogocode.transformFile",
          "group": "2_workspace"
        }
      ],
      "editor/title/context": [
        {
          "when": "isFileSystemResource",
          "command": "gogocode.transformFile",
          "group": "2_workspace"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/prettier": "^2.3.0",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "directory-tree": "^2.2.9",
    "gogocode": "^1.0.3",
    "prettier": "^2.3.1"
  }
}
